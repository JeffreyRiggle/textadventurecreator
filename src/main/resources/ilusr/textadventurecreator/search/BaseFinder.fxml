<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
	<GridPane AnchorPane.topAnchor="0.0" 
			  AnchorPane.leftAnchor="0.0" 
			  AnchorPane.rightAnchor="0.0"
			  AnchorPane.bottomAnchor="0.0"
			  vgap="5" hgap="5">
			<columnConstraints>
        		<ColumnConstraints hgrow="ALWAYS" prefWidth="275"/>
        		<ColumnConstraints hgrow="NEVER" prefWidth="150"/>
        		<ColumnConstraints hgrow="NEVER" prefWidth="150"/>
    		</columnConstraints>
    		<rowConstraints>
    			<RowConstraints minHeight="25.0" prefHeight="50" vgrow="NEVER" />
    			<RowConstraints minHeight="25.0" prefHeight="250.0" vgrow="ALWAYS" />
    		</rowConstraints>
    		<padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
    		<TextField fx:id="search" GridPane.columnIndex="0" GridPane.rowIndex="0" />
			<ComboBox fx:id="searchField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
			<ComboBox fx:id="searchScope" GridPane.columnIndex="2" GridPane.rowIndex="0" />
			<ListView fx:id="searchArea" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="3" />
	</GridPane>
</fx:root>