		<TextField fx:id="columns" GridPane.columnIndex="2" GridPane.rowIndex="1" />
		<GridPane fx:id="additionalProperties" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="3">
			<columnConstraints>
        		<ColumnConstraints hgrow="ALWAYS" prefWidth="100"/>
        		<ColumnConstraints hgrow="ALWAYS" prefWidth="10" maxWidth="10"/>
        		<ColumnConstraints hgrow="ALWAYS" prefWidth="100"/>
    		</columnConstraints>
		</GridPane>  
	</GridPane>
