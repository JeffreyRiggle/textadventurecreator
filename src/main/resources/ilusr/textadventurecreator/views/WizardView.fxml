<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
	<GridPane
		AnchorPane.topAnchor="0.0" 
		AnchorPane.leftAnchor="0.0" 
		AnchorPane.rightAnchor="0.0"
		AnchorPane.bottomAnchor="0.0">
		<columnConstraints>
        	<ColumnConstraints hgrow="ALWAYS" minWidth="25" halignment="CENTER"/>
        	<ColumnConstraints hgrow="ALWAYS" minWidth="25" halignment="CENTER"/>
        	<ColumnConstraints hgrow="ALWAYS" minWidth="25" halignment="CENTER"/>
        	<ColumnConstraints hgrow="ALWAYS" minWidth="25" halignment="CENTER"/>
    	</columnConstraints>
    	<rowConstraints>
    		<RowConstraints minHeight="300.0" vgrow="ALWAYS" />
    		<RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="NEVER" /> 
    		<RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="NEVER" valignment="TOP"/> 	
    	</rowConstraints>
    	<ViewSwitcher fx:id="switcher" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4" />
    	<Separator orientation="HORIZONTAL" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="4" />
    	<Button fx:id="back" prefWidth="75" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    	<Button fx:id="forward" prefWidth="75" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    	<Button fx:id="finish" prefWidth="75" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    	<Button fx:id="cancel" prefWidth="75" GridPane.columnIndex="3" GridPane.rowIndex="2" />
	</GridPane>
</fx:root>