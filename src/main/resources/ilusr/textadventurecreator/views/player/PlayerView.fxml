<?import javafx.scene.control.ScrollPane?>

<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
<ScrollPane
		AnchorPane.topAnchor="0.0" 
		AnchorPane.leftAnchor="0.0" 
		AnchorPane.rightAnchor="0.0"
		AnchorPane.bottomAnchor="0.0"
		fitToHeight="true" 
		fitToWidth="true">
	<content>
		<GridPane>
			<columnConstraints>
        		<ColumnConstraints hgrow="ALWAYS" prefWidth="150"/>
        		<ColumnConstraints hgrow="ALWAYS" prefWidth="200"/>
    		</columnConstraints>
    		<rowConstraints>
    			<RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="150.0" prefHeight="150.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="150.0" prefHeight="150.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="150.0" prefHeight="150.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="150.0" prefHeight="150.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="150.0" prefHeight="150.0" vgrow="ALWAYS" />
    		</rowConstraints>
    		<padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
    		<Label fx:id="playerLabel" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
			<TextField fx:id="id" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
			
			<Label fx:id="attributeLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
			<ListView fx:id="attributes" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
			
			<Label fx:id="characteristicLabel" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
			<ListView fx:id="characteristics" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2"/>
			
			<Label fx:id="bodyPartLabel" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
			<ListView fx:id="bodyParts" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2"/>
			
			<Label fx:id="inventoryLabel" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2"/>
			<ListView fx:id="inventory" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2"/>
			
			<Label fx:id="equipmentLabel" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2"/>
			<ListView fx:id="equipment" GridPane.columnIndex="0" GridPane.rowIndex="10" GridPane.columnSpan="2"/>
		</GridPane>
	</content>
</ScrollPane>
</fx:root>