<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
	<GridPane
		AnchorPane.topAnchor="0.0" 
		AnchorPane.leftAnchor="0.0" 
		AnchorPane.rightAnchor="0.0"
		AnchorPane.bottomAnchor="0.0">
		<columnConstraints>
			<ColumnConstraints hgrow="ALWAYS" prefWidth="50"/>
        	<ColumnConstraints hgrow="ALWAYS" prefWidth="150"/>
        	<ColumnConstraints hgrow="ALWAYS" prefWidth="75"/>
        	<ColumnConstraints hgrow="ALWAYS" prefWidth="75"/>
    	</columnConstraints>
    	<rowConstraints>
    		<RowConstraints minHeight="25.0" prefHeight="50.0" vgrow="ALWAYS" />
    		<RowConstraints minHeight="25.0" prefHeight="35.0" vgrow="ALWAYS" />
    		<RowConstraints minHeight="25.0" prefHeight="35.0" vgrow="ALWAYS" />
    		<RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="ALWAYS" />	
    	</rowConstraints>
    	<padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
    	<Label fx:id="itemLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    	<Button fx:id="editItem" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    	<Label fx:id="item" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    	<Button fx:id="addItem" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    	<Button fx:id="findItem" GridPane.columnIndex="3" GridPane.rowIndex="1" />
    	
    	<Label fx:id="amountLabel" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
    	<TextField fx:id="amount" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
	</GridPane>
</fx:root>