<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
	<GridPane
		AnchorPane.topAnchor="0.0" 
		AnchorPane.leftAnchor="0.0" 
		AnchorPane.rightAnchor="0.0"
		AnchorPane.bottomAnchor="0.0">
		<columnConstraints>
        		<ColumnConstraints hgrow="NEVER" prefWidth="75"/>
        		<ColumnConstraints hgrow="ALWAYS" prefWidth="300"/>
    		</columnConstraints>
    		<rowConstraints>
    			<RowConstraints minHeight="25.0" prefHeight="50.0" vgrow="NEVER" />
    			<RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="NEVER" />
    			<RowConstraints minHeight="25.0" prefHeight="50.0" vgrow="NEVER" />
    		</rowConstraints>
    	<HBox fx:id="buildArea" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
		<Button fx:id="build" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
		<Label fx:id="macroLabel" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
		<TextField fx:id="macro" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
	</GridPane>
</fx:root>