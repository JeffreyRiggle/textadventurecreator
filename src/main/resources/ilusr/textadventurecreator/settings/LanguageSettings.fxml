<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
	<GridPane AnchorPane.topAnchor="0.0" 
			  AnchorPane.leftAnchor="0.0" 
			  AnchorPane.rightAnchor="0.0"
			  AnchorPane.bottomAnchor="0.0">
			<columnConstraints>
        		<ColumnConstraints hgrow="ALWAYS" prefWidth="100"/>
        		<ColumnConstraints hgrow="ALWAYS" prefWidth="100"/>
        		<ColumnConstraints hgrow="ALWAYS" prefWidth="100"/>
    		</columnConstraints>
    		<rowConstraints>
    			<RowConstraints minHeight="25.0" prefHeight="50" vgrow="NEVER" />
    			<RowConstraints minHeight="25.0" prefHeight="50.0" vgrow="NEVER" />
    			<RowConstraints minHeight="25.0" prefHeight="150.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="25.0" prefHeight="50.0" vgrow="NEVER" />
    		</rowConstraints>
    		<padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
    		<Label fx:id="title" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3"/>
			<Label fx:id="langLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="3"/>
			<ListView fx:id="languages" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="3"/>
			<Button fx:id="addLanguage" GridPane.columnIndex="0" GridPane.rowIndex="3" />
			<Button fx:id="editLanguage" GridPane.columnIndex="1" GridPane.rowIndex="3" />
			<Button fx:id="apply" GridPane.columnIndex="2" GridPane.rowIndex="3" />
	</GridPane>
</fx:root>