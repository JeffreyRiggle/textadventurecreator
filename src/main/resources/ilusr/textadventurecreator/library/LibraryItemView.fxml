    			<content>
					<ListView fx:id="gameStates"/>
    			</content>
    		</TitledPane>
    		<TitledPane GridPane.columnIndex="0" GridPane.rowIndex="13" GridPane.columnSpan="2" fx:id="layoutPane">
    			<content>
					<ListView fx:id="layouts"/>
    			</content>
    		</TitledPane>
	</GridPane>
