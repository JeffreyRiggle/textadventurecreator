    		<TitledPane GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2" fx:id="playerPane">
    			<content>
					<ListView fx:id="players"/>
    			</content>
    		</TitledPane>
    		<TitledPane GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2" fx:id="triggerPane">
