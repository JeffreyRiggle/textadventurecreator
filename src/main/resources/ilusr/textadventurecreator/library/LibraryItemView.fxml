    		<TitledPane GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" fx:id="propertyPane">
    			<content>
					<ListView fx:id="properties"/>
    			</content>
    		</TitledPane>
    		<TitledPane GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" fx:id="itemPane">
    			<content>
					<ListView fx:id="items"/>
