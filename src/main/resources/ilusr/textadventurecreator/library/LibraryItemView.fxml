    		</rowConstraints>
    		<Label fx:id="nameLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    		<TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    		<Label fx:id="authorLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    		<TextField fx:id="author" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    		<TitledPane GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2" fx:id="attributePane">
    			<content>
    				<ListView fx:id="attributes"/>
    			</content>
    		</TitledPane>
    		<TitledPane GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2" fx:id="characteristicPane">
    			<content>
    				<ListView fx:id="characteristics"/>
    			</content>
    		</TitledPane>
    		<TitledPane GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" fx:id="bodyPartPane">
