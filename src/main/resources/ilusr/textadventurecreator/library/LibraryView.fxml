<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
	<GridPane
		AnchorPane.topAnchor="0.0" 
		AnchorPane.leftAnchor="0.0" 
		AnchorPane.rightAnchor="0.0"
		AnchorPane.bottomAnchor="0.0">
		<columnConstraints>
        	<ColumnConstraints hgrow="ALWAYS" prefWidth="250"/>
        	<ColumnConstraints hgrow="ALWAYS" prefWidth="100"/>
    	</columnConstraints>
    	<rowConstraints>
    		<RowConstraints minHeight="25.0" prefHeight="30.0" vgrow="ALWAYS" />
    		<RowConstraints minHeight="25.0" prefHeight="75.0" vgrow="ALWAYS" />
    		<RowConstraints minHeight="25.0" prefHeight="75.0" vgrow="ALWAYS" />
    	</rowConstraints>
    	<Label fx:id="libraryLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    	<ListView fx:id="libraryItems" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="2"/>
    	<Button fx:id="importBtn" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    	<Button fx:id="exportBtn" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
	</GridPane>
</fx:root>