<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
	<GridPane AnchorPane.topAnchor="0.0" 
			  AnchorPane.leftAnchor="0.0" 
			  AnchorPane.rightAnchor="0.0"
			  AnchorPane.bottomAnchor="0.0">
			<columnConstraints>
        		<ColumnConstraints hgrow="ALWAYS" prefWidth="150"/>
        		<ColumnConstraints hgrow="ALWAYS" prefWidth="250"/>
    		</columnConstraints>
    		<rowConstraints>
    			<RowConstraints minHeight="25.0" prefHeight="50" vgrow="NEVER" />
    			<RowConstraints minHeight="25.0" prefHeight="50.0" vgrow="NEVER" />
    			<RowConstraints minHeight="25.0" prefHeight="150.0" vgrow="ALWAYS" />
    		</rowConstraints>
    		<padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
			<Label fx:id="codeLabel" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
			<TextField fx:id="code" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
			<Label fx:id="nameLabel" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
			<TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="1"/> 
			<TableView fx:id="table" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
				<columns>
					<TableColumn fx:id="keyword" />
					<TableColumn fx:id="enValue" />
					<TableColumn fx:id="newValue" />
				</columns>
			</TableView>
	</GridPane>
</fx:root>