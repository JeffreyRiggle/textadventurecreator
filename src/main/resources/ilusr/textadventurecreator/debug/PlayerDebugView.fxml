<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
	<GridPane AnchorPane.topAnchor="0.0" 
			  AnchorPane.leftAnchor="0.0" 
			  AnchorPane.rightAnchor="0.0"
			  AnchorPane.bottomAnchor="0.0">
			<columnConstraints>
        		<ColumnConstraints hgrow="SOMETIMES" prefWidth="250"/>
    		</columnConstraints>
    		<rowConstraints>
    			<RowConstraints minHeight="25.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="25.0" vgrow="ALWAYS" />    			
    			<RowConstraints minHeight="25.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="25.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="25.0" vgrow="ALWAYS" />
    			<RowConstraints minHeight="25.0" vgrow="ALWAYS" />
    		</rowConstraints>
    		<Label fx:id="player" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    		<TitledPane fx:id="attributePane" GridPane.columnIndex="0" GridPane.rowIndex="1">
    			<content>
    				<VBox fx:id="attributeArea" spacing="20"/>
    			</content>
    		</TitledPane>
    		<TitledPane fx:id="characteristicPane" GridPane.columnIndex="0" GridPane.rowIndex="2">
    			<content>
    				<VBox fx:id="characteristicArea" spacing="20"/>
    			</content>
    		</TitledPane>
    		<TitledPane fx:id="bodyPartPane" GridPane.columnIndex="0" GridPane.rowIndex="3">
    			<content>
					<VBox fx:id="bodyPartArea" spacing="10"/>
    			</content>
    		</TitledPane>
    		<TitledPane fx:id="inventoryPane" GridPane.columnIndex="0" GridPane.rowIndex="4">
    			<content>
					<VBox fx:id="inventoryArea" spacing="10"/>
    			</content>
    		</TitledPane>
    		<TitledPane fx:id="equipmentPane" GridPane.columnIndex="0" GridPane.rowIndex="5">
    			<content>
					<VBox fx:id="equipmentArea" spacing="10"/>
    			</content>
    		</TitledPane>
	</GridPane>
</fx:root>